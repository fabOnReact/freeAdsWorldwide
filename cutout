<% header("companies","Edit Company") %>
<%= render "shared/partials/formheader" %>
<div class="header">
    <h4 class="title"><%= yield(:companies) %></h4>
</div>  
        <div class="content">
            <%= simple_form_for @company do |f| %>
              <%= f.input :name %>
              <%= f.association :companytype, prompt: "Choose a type", class: "form-control btn-group bootstrap-select show-tick" %>
              <%#= f.input :title %>
              <%= f.input :description, as: :text %>
              <span class="countdown"></span>
              <%= f.input :url, ad: :url %>
              <%= link_to "Back", companies_path, class: "btn btn-primary btn-fill pull-left btn-main" %>
              <%= f.button :submit, class: "btn btn-info btn-fill pull-right btn-main" %>
              <div class="clearfix"></div>
            <% end %>
        </div>
<%= render partial: "shared/partials/formfooter" %>
<div class="content">
    <%= simple_form_for [@campaign, @run] do |f| %>
      <% if @run.errors['base'].present? %>
        <span class="help-block error"><%= @run.errors['base'][0] %></span>
      <% end %>
      <%= f.select(:campaign_id, current_user.campaigns.collect {|p| [ p.name, p.id ]}, {},  {:class => "form-control"}) %>  
      <%= f.input :runprintnumber %>
      <%= f.input :ownads %>
      <%= f.input :city, label: "City" %>
      <%= f.input :location, label: "Description of the locations" %>      
      <%= link_to "Back", companies_path, class: "btn btn-primary btn-fill pull-left btn-main" %>
      <%= f.button :submit, class: "btn btn-info btn-fill pull-right btn-main" %>
      <div class="clearfix"></div>
    <% end %>
</div>