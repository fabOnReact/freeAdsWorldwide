<% title "Delete Campaign" %>
<%= render "shared/partials/alert", text: @text %>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2><%= yield(:title) %></h2>
            </header>
            <div class="panel-body">
            <%= link_to "Delete", {:action => "destroy"}, :method => :delete, :class => "btn btn-warning wideButton btn-fill" %>
            <%= link_to "Cancel", campaign_path(@campaign.id), :method => :get, :class => "btn btn-primary wideButton btn-fill" %>
            </div>
        </section>   
    </div>
</div>