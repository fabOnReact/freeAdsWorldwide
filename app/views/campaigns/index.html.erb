<% if @campaigns.length > 0 %>
<% title "Your Campaigns" %>
<%= render "shared/partials/formheader" %>
<div class="content table-responsive table-full-width">
    <table class="table table-hover table-striped">
        <thead class="row">
            <th class="col-xs-4">Name</th>
        	<th class="hidden-xs hidden-sm">Strategy</th>
        	<th class="hidden-xs hidden-sm">Company</th>
            <th class="hidden-xs hidden-sm">Campaign</th>
            <th class="options col-xs-8 col-sm-3 col-md-2">Options</th>
        </thead>
        <tbody class="row">
            <% @campaigns.each do |campaign| %>
            <tr>
            	<td class="col-xs-4"><%= campaign.name %></td>
            	<td class="hidden-xs hidden-sm">
                    <% if campaign.worldwide %>
                        <i class="fa fa-globe" aria-hidden="true"></i>
                    <% end %> 
                    <% if campaign.america %> 
                        <img src="https://s3.eu-central-1.amazonaws.com/freeads/american-flag-2144392_640.png" class="flag">
                    <% end %> 
                    <% if campaign.europe %>
                        <img src="https://s3.eu-central-1.amazonaws.com/freeads/euro-flag-1776253_1920.jpg" class="flag">
                    <% end %> 
                    <% if campaign.asia %>
                        <img src="https://s3.eu-central-1.amazonaws.com/freeads/banner-2024824_640.png" class="flagsmall">
                    <% end %>                     
                    <% if campaign.oceania %>
                        <img src="https://s3.eu-central-1.amazonaws.com/freeads/australia-153732_640.png" class="flag">
                    <% end %>                         
                </td>
            	<td class="hidden-xs hidden-sm"><%= campaign.company.name %></td>
                <td class="hidden-xs hidden-sm"><%= campaign.campaigntype.name %></td>
                <td class="options col-xs-8 col-sm-3 col-md-2">
                    <div class="btn-group" id="btn-group">
                     <%= link_to campaign_path(campaign.id), class: "btn btn-primary", method: :get do %><i class="fa fa-arrow-right" aria-hidden="true"></i><% end %>
                     <%= link_to edit_campaign_path(campaign.id), class: "btn btn-success", id: "display", method: :get do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %>
                     <%= link_to delete_campaign_path(campaign.id), class: "btn btn-danger", method: :get do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
<%= render partial: "shared/partials/formfooter" %>
<%= render partial: "shared/links/campaigns_links" %>
<% else %>
<%= render partial: "shared/links/campaigns_links" %>
<% end %>