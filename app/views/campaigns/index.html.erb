<% if @campaigns.length > 0 %>
<% title "Your Campaigns" %>
<%= render "shared/partials/formheader" %>
<div class="content table-responsive table-full-width">
    <table class="table table-hover table-striped">
        <thead>
            <th>Name</th>
        	<th>Targetcountries</th>
        	<th>Company</th>
            <th>Campaign</th>
            <th class="options col-md-2">Options</th>
        </thead>
        <tbody>
            <% @campaigns.each do |campaign| %>
            <%# flagpath = 'country-squared/' %>
            <%# flag = flagpath << (campaign.targetcountries.downcase.concat(".svg")) %>
            <!--image_tag 'country-squared/hk.svg', width: 64, alt: 'HK'
            http://localhost:3000/assets/country-squared/it.svg-->
            <tr>
            	<td><%= campaign.name %></td>
            	<td><%#= image_tag flag, width: "30", alt: 'HK' %></td>
            	<td><%= campaign.company.name %></td>
                <td><%= campaign.campaigntype.name %></td>
                <td class="options col-sm-2 col-md-2">
                    <div class="btn-group">
                     <%= link_to campaign_path(campaign.id), class: "btn btn-primary", method: :get do %><i class="fa fa-arrow-right" aria-hidden="true"></i><% end %>
                     <%= link_to edit_campaign_path(campaign.id), class: "btn btn-success", method: :get do %><i class="fa fa-pencil" aria-hidden="true"></i><% end %>
                     <%= link_to delete_campaign_path(campaign.id), class: "btn btn-danger", method: :get do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
<%= render partial: "shared/partials/formfooter" %>
<%= render partial: "shared/links/campaigns_links" %>
<% else %>
<%= render partial: "shared/links/campaigns_links" %>
<% end %>