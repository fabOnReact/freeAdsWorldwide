<% title "Create Campaign" %>
<%= render "shared/partials/formheader" %>
        <div class="content">
            <%= simple_form_for @campaign do |f| %>
              <%= f.input :name %>
              <div class="form-group string required">
                <%= f.label "Favorite Countries", :targetcountries %><br />
                <%= f.country_select(:targetcountries, {}, {class: 'form-control', :id => "country_select", :multiple => true}) %> 
              </div>
              <%= f.association :campaigntype, prompt: "Choose a Campaign type", class: "form-control" %>
              <%#= f.association :company,  prompt: "Choose a Company"  %>
              <%= f.select(:company_id, current_user.companies.collect {|p| [ p.name, p.id ]}, {:selected => @company.id}, {:class => "form-control"}) %> 
              <%= link_to "Back", campaigns_path, class: "btn btn-primary btn-fill pull-left" %>
              <%= f.button :submit, class: "btn btn-info btn-fill pull-right" %>
              <div class="clearfix"></div>
            <% end %>
        </div>
<%= render partial: "shared/partials/formfooter" %>
