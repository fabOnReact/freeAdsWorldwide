    -->

    	<div class="sidebar-wrapper">
            <div class="logo">
                <div class="simple-text">
                    Free Ads Worldwide
                </div>
            </div>

            <ul class="nav">
                <!--li>
                    <a href="dashboard.html">
                        <i class="pe-7s-home"></i>
                        <p>Dashboard</p>
                    </a>
                </li-->
                <li class="" id="company">
                    <% if current_user != nil && current_user.companies.length > 0 %>
                        <%= link_to companies_path, id: "Companies" do %>
                            <i class="fa fa-home"></i>
                            <!--i class="pe-7s-culture"></i-->
                            <p>Home</p>
                        <% end %>
                    <% else %>
                        <%= link_to new_company_path, id: "Account" do %>
                            <i class="pe-7s-culture"></i>
                            <p>New Company</p>
                        <% end %>
                    <% end %>
                </li>                
                <!--li class="">
                    <%#= link_to campaigns_path do %>
                        <i class="pe-7s-news-paper"></i>
                        <p>Campaigns</p>
                    <%# end %>
                </li-->
                <% last_campaign = Campaign.last %>
                <% if last_campaign.present? %>
                    <% if last_campaign.runs.where.not(:status => "completed").size == 0 %>
                        <li class="">
                            <%= link_to companies_path(last_campaign), { id: "printButton"} do %>
                                <i class="fa fa-print" aria-hidden="true"></i>
                                <p>Create Print</p>
                            <% end %>
                        </li>

                    <% end %>
                    <% last_run = Run.last %>
                    <% if last_run.present? %>
                        <% if last_run != "completed" %>
                            <li class="">
                                <%= link_to campaign_run_path(last_run.campaign, last_run, format: "pdf") do %>
                                    <i class="fa fa-download" aria-hidden="true"></i>
                                    <p>Fliers Pdf</p>
                                <% end %>
                            </li>
                        <% end %>

                        <% if Run.last.status == "to distribute" %>
                            <li class="">
                                <%= link_to  newstatus_run_path(last_run) do %>
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                    <p>Fliers Distributed</p>
                                <% end %>
                            </li>
                        <% end %>                                               
                    <% end %>
                <% end %> <!-- last_campaign.present? -->
            </ul>
    	</div>
    </div>

