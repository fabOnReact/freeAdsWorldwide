<% if @companies.length > 0 %>
<% title "Your Companies" %>
<%= render "shared/partials/formheader" %>
<div class="content table-responsive table-full-width">
    <table class="table table-hover table-striped">
        <thead>
            <th>Name</th>
        	<th class="hidden-xs">Type</th>
        	<th>Website</th>
            <th class="options col-md-2">Options</th>
        </thead>
        <tbody>
            <% @companies.each do |company| %>
            <tr>
            	<td><%= company.name %></td>
            	<td class="hidden-xs"><%= company.companytype.name %></td>
            	<td><%= link_to company.website do %><i class="pe-7s-link"></i><% end %></td>
                <td class="options col-sm-3 col-md-3">
                    <div class="btn-group" id="btn-group">
                     <%= link_to company_path(company.id), class: "btn btn-primary", method: :get  do %>
                     <i class="fa fa-arrow-right" aria-hidden="true"></i>
                     <% end %>
                     <%= link_to edit_company_path(company.id), class: "btn btn-success", method: :get  do %>
                     <i class="fa fa-pencil" aria-hidden="true"></i>
                     <% end %>
                     <%= link_to delete_company_path(company.id), class: "btn btn-danger", method: :get  do %>
                     <i class="fa fa-trash-o" aria-hidden="true"></i>
                     <% end %>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
<%= render partial: "shared/partials/formfooter" %>
<%= render partial: "shared/links/companies_links" %>
<% else %>
<%= render partial: "shared/links/companies_links" %>
<% end %>