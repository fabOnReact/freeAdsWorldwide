<%= render "shared/partials/formheader", title: @title %>
<div class="content table-responsive table-full-width">
    <table class="table table-hover table-striped">
        <thead>
            <th>Name</th>
        	<th>Type</th>
        	<th>Website</th>
        </thead>
        <tbody>
            <%# binding.pry %>
            <% @companies.each do |company| %>
            <tr>
            	<td><%= company.name %></td>
            	<td><%= company.companytype.name %></td>
            	<td><%= link_to company.website do %><i class="pe-7s-link"></i><% end %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
<%= render partial: "shared/partials/formfooter" %>
<%= render partial: "shared/links/companies_links" %>