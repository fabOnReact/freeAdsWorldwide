<% header("companies","Edit Company") %>
<%= render "shared/partials/formheader" %>
<div class="header">
    <h4 class="title"><%= yield(:companies) %></h4>
</div>  
        <div class="content">
            <%= simple_form_for @company do |f| %>
              <%= f.input :name %>
              <%= f.association :companytype, prompt: "Choose a type", class: "form-control" %>
              <%= f.input :title %>
              <%= f.input :description, as: :text %>
              <%= f.input :website, ad: :url %>
              <%= link_to "Back", companies_path, class: "btn btn-primary btn-fill pull-left" %>
              <%= f.button :submit, class: "btn btn-info btn-fill pull-right" %>
              <div class="clearfix"></div>
            <% end %>
        </div>
<%= render partial: "shared/partials/formfooter" %>