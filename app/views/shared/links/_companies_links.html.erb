<div class="content">
    <div class="container-fluid">

		<div class="row">
			<%- if controller_name == 'companies' && action_name == 'index' %>
				<div class="col-xs-12 col-sm-3 col-md-3 col-lg-2">			
					<%= link_to "New Company", new_company_path, class: "btn btn-primary btn-fill btn-main", method: :get %><br />
				</div>
				<div class="col-xs-12 col-sm-3 col-md-3 col-lg-2">
					<% if current_user.companies.present? %>
						<%= link_to "New Campaign", new_campaign_path, class: "btn btn-success btn-fill btn-main" %><br />
					<% end %>						
				</div>
			<% end -%>					
			<%- if controller_name == 'companies' && action_name == 'show' && @company.campaigns.size == 0 %>
				<div class="col-xs-12 col-sm-3 col-md-3 col-lg-2">
					<%= link_to "New Campaign", new_campaign_path(@company), class: "btn btn-primary btn-fill btn-main" %><br />
				</div>
			<% end -%>					
		</div>
    </div>
</div>                    