<% header("runs","New Orders") %>
<%= render "shared/partials/formheader" %>
<div class="header">
    <h4 class="title"><%= yield(:runs) %></h4>
</div>            
<div class="content">
    <%= simple_form_for @run do |f| %>
      <%= f.association :campaign, {:selected => @campaign.id } %>
      <%= f.input :runprintnumber, label: "Number of Ads to print" %>
      <%= f.input :ownads, label: "Number of your own ads" %>
      <%= link_to "Back", companies_path, class: "btn btn-primary btn-fill pull-left btn-main", method: :get %>
      <%= f.button :submit, class: "btn btn-info btn-fill pull-right btn-main" %>
      <div class="clearfix"></div>
    <% end %>
</div>
<%= render partial: "shared/partials/formfooter" %>
