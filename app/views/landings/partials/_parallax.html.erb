<div class="parallax filter-gradient blue" data-color="blue">
    <div class="parallax-background">
        <%= image_tag("bg3.jpg", class: "parallax-background-image") %>
    </div>
    <div class= "container">
        <div class="row">
        <div class="messages col-xs-12 col-sm-12 col-md-12">
            <%= render partial: "partials/flash" %>    
        </div>
            <div class="col-md-5 hidden-xs">
                <div class="parallax-image">                        
                    <%= image_tag("iphone3.png", class: "phone", style:"margin-top: 20px") %>
                </div>
            </div>
            <div class="col-md-6 col-md-offset-1">
                <div class="description">
                    <h2>Global Advertising</h2>
                    <br>
                    <h5>Start a Global Advertising Campaign by teaming up ith millions of others and helping each other to get your Ad published in the mayor cities in the World for free</h5>
                </div>
                <div class="buttons">
                    <button class="btn btn-fill btn-neutral">
                    <i class="fa fa-apple"></i> Appstore
                    </button>
                    <button class="btn btn-simple btn-neutral">
                    <i class="fa fa-android"></i>
                    </button>
                    <button class="btn btn-simple btn-neutral">
                    <i class="fa fa-windows"></i>
                    </button>
                <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-fill btn-neutral" %>                        
                </div>
            </div>
        </div>
    </div>
</div>