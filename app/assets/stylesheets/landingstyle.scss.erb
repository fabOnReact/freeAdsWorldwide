/* iPhone 6 Plus */

@media (max-width: 414px) {
	
	/* Parallax */

	.landing-page .parallax {
		height: 672px;
	}	

	/* Presentation */

	.section, .landing-page .section-presentation {
		height: 736px;
	}	

	/* Features */

	.section-features {
		height: 100%;
	}
	
	/* No-Padding */

	.landing-page .section-no-padding .parallax {
		margin-top: 0px;
		height: 736px;
	}

	/* Footer */
	.footer {
		display: none;
	}

}

/* Nexus 5X 6P */

@media (max-width: 412px) {
	/* Parallax for Nexus 5X */
	
	.landing-page .parallax {
		height: 668px;
	}

	.parallax-background {
		background-position: initial;
	}

	/* Clients for Nexus 5X */

	.section.section-clients {
		height: 732px;
		padding-top: 0px;
	}

	/* Demo for Nexus 5X */

	.section.section-no-padding {
		display: none;
	}

	/* Demo for Nexus 5X */

	#landingfooter {
		display: none;
	}
	
	/* Flexbox for Nexus 5X */

	.section .flexbox {
		display: flex;
		flex-direction: column;
		height: 732px;
		justify-content: center;
	}

	/* Hiding text in Icons for Nexus 5X */
	.mobile {
		display: initial;
	}

	.desktop {
		display: none;
	}
}


/* Galaxy SIII Galaxy S5 */

@media (max-width: 360px) {
	/* Parallax for Galaxy S III */
	
	.landing-page .parallax {
		height: 575px;
	}

	/* Clients for Galaxy S III */

	.section.section-clients {
		height: 640px;
	}

	.parallax .flexbox, .section .flexbox {
		height: 640px;
	}
}