/* First Page with Smartphone*/

.buttons a {
	width: 186px;
}

/* Parallax */

.messages {
	z-index: 1;
	position: absolute;
	top: 90px;
}

.mobile {
	display: none;
}

.parallax-background {
	background-image: image_url('chicago-690364_1920.jpg');
	background-size: cover;
	background-position: center -630px;	
}

/* Clients */

li img {
	height: 170px;
	margin-right: -4px;
}

.landing-page .logos li {
	margin-left: 0px;
	margin-right: 0px;
}

/* Presentation */ 

.landing-page .section-presentation img {
	height: 560px;
	border-radius: 30px;
}


/* Demo */

#carouselContainer {
	max-height: 350px;
	max-width: 650px;
}

#qrScan {
	position: relative;
	top: -25px;
}


/* Media Queries */

/* Responsive Queries */

@media (max-width: 1440px) {
	/* Parallax */
	.parallax-background {
		background-position: initial;
	}
}

@media (max-width: 768px) {
	
	/* All */

	.section {
		padding-top: 0px;
		padding-bottom: 0px;		
	}


	/* Presentation flexbox */

	.landing-page .section-presentation .description {
		margin-top: 0px;
		padding-top: 0px;
	}

	.section-presentation .row .col-md-5 {
		display: none;
	}

	/* Generic Flexbox*/ 

	.section, .section .container, .section .container .row, .section .flexbox {
		display: flex;
		flex-direction: column;
		height: 100%;
		justify-content: center;	
		margin-bottom: 0px;	
		text-align: center;
	}
	
	/* Demo */

	.section-demo {
		background-color: #EEEEEE;
		padding-top: 50px;
		padding-bottom: 50px;
	}

	.demofeatures {
		display: none;
	}

	.landing-page .section-demo .row:first-child {
		margin-bottom: 0px;
	}

	.landing-page .section-demo {
		margin-top: 0px;
	}

	.landing-page .section-demo h4, .landing-page .section-demo p {
		margin-top: 0px;
		margin-bottom: 0px;
	}


	/* Features */ 

	.landing-page .section-features .card {
		min-height: initial;
	}

	/* no-padding but also the others */

	.header-text {
		line-height: 42px;
	}
	

	/* Footer */
	.footer nav.pull-left, .footer:not(.footer-big) nav > ul li, .pull-right {
		float: right;
	}
}


@media (max-width: 680px) {
	/* Parallax */ 
	
	.parallax {
		margin-top: 64px;
	}
	
	.landing-page .parallax .description {
		margin-top: 0px;
		padding-top: 0px;
	}

	/* Generic Flexbox*/ 

	 .parallax .flexbox, .parallax .container/*, .section .flexbox*/ {
		display: flex;
		flex-direction: column;
		height: 100%;
		justify-content: center;	
		margin-bottom: 0px;	
	}
	
}


