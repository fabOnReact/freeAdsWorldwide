/* First Page with Smartphone*/

.buttons a {
	width: 186px;
}

/* Parallax */

.messages {
	z-index: 1;
	position: absolute;
	top: 90px;
}

.mobile {
	display: none;
}

.parallax-background {
	background-image: image_url('chicago-690364_1920.jpg');
	background-size: cover;
	background-position: center -630px;	
}

/* Clients */

li img {
	height: 170px;
	margin-right: -4px;
}

.landing-page .logos li {
	margin-left: 0px;
	margin-right: 0px;
}

/* Presentation */ 

.landing-page .section-presentation img {
	height: 560px;
	border-radius: 30px;
}


/* Demo */

#carouselContainer {
	max-height: 350px;
	max-width: 650px;
}

#qrScan {
	position: relative;
	top: -25px;
}


/* Media Queries */

@media (max-width: 622px) {
	.wrapper .container .row {
		display: flex;
		flex-direction: column;
	}
}

@media (max-width: 360px) {
	/* Parallax for Galaxy S III */
	
	.landing-page .parallax {
		height: 640px;
	}

	/* Clients for Galaxy S III */

	.section.section-clients {
		height: 640px;
		padding-top: 0px;
	}

	.header-text {
		line-height: 42px;
	}

	/* Demo for Galaxy S III */

	.demofeatures {
		display: none;
	}

	/* Demo for Galaxy S III */

	.secion.section-no-padding {
		display: none;
	}

	/* Demo for Galaxy S III */

	#landingfooter.footer {
		display: none;
	}
	
	/* Flexbox for Galaxy S III */

	.parallax .flexbox, .section .flexbox {
		display: flex;
		flex-direction: column;
		height: 640px;
		justify-content: center;
	}

	/* Hiding text in Icons for Galaxy S III */
	.mobile {
		display: initial;
	}

	.desktop {
		display: none;
	}
}